<script>
    function searchbar() {
    // Declare variables
    var input, filter, a, b;
    input = document.getElementById('myInput');
    filter = input.value.toUpperCase();
    cards = document.getElementsByClassName("card")
    titles = document.getElementsByClassName("card-title");
    subtitles = document.getElementsByClassName("card-subtitle");
        
    // Loop through all list items, and hide those who don't match the search query
    for (i = 0; i < cards.length; i++) {
        a = titles[i];
        b = subtitles[i];
        if (a.innerHTML.toUpperCase().indexOf(filter) > -1 || b.innerHTML.toUpperCase().indexOf(filter) > -1) {
          cards[i].style.display = "";
        } else {
          cards[i].style.display = "none";
        }
    }
}
</script>